<%- include("partials/header", {title: "Now Playing"}) %> <%-
include("partials/navbar") %>
<div class="now-playing row">
    <% movies.forEach(movie => { %>
        <div class="movie-card col-lg-4">
            <img src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>" alt="movie poster" />
            <h5><%= movie.title %></h5>
            <p>
              <%= movie.overview %>
            </p>
            <p style="color: #E9B824;">Rating: <%= movie.vote_average.toFixed(2)%> of 10</p>
          </div>
    <%}) %>
</div>
<%- include("partials/footer") %>
